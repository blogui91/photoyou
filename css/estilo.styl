azul = #00CCFF
gris = #F4F4F4

@font-face {
	font-family: 'photoyou_icons';
	src:url('../fonts/photoyou_icons.eot?-qmx9fe');
	src:url('../fonts/photoyou_icons.eot?#iefix-qmx9fe') format('embedded-opentype'),
		url('../fonts/photoyou_icons.woff?-qmx9fe') format('woff'),
		url('../fonts/photoyou_icons.ttf?-qmx9fe') format('truetype'),
		url('../fonts/photoyou_icons.svg?-qmx9fe#photoyou_icons') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	font-size 16px

footer
	background azul
	color white
	overflow hidden
	padding 0.5em
	position relative

	.copyright
		margin 0.3em
		width 80%
		p
			padding 0
			margin 0	
	.social
		background rgba(black,0.5)
		height 100%
		padding 0.5em
		position absolute
		right 0
		top 0
		a
			text-decoration none
			font-size 1.5em
			vertical-align bottom
		.facebook
			&:before
				font-family "photoyou_icons"
				content "\e601"
				color black
				font-weight normal
		.twitter
			&:before
				font-family "photoyou_icons"
				content "\e604"
				color black
				font-weight normal
		.youtube
			&:before
				font-family "photoyou_icons"
				content "\e603"
				color black
				font-weight normal
header 
	background azul
	margin 0
	padding 0em
	overflow hidden
	
	.add_album
		background rgba(black, 0.5)
		float right
		margin 0em
		padding 0.5em 0.5em 
		text-align center
		width 30%
		.album
			color white
			font-size 1em
			font-weight bold
			text-decoration none
			&:before
				font-family "photoyou_icons"
				content "\e606"
				font-weight normal
			p
				margin 0
				padding 0

	.logo
		float left
		width 60%
		img
			width 300px

section
	margin 0
	padding 0
	.description
		background gris
		padding 1em
		
	.search
		background gray
		border-radius 0.3em
		display inline-block
		padding 0.3em 0.7em
		.buscar
			color azul
			&:before
				font-family "photoyou_icons"
				content "\e600"
		a
			color white	
			font-weight bold
			text-decoration none
	.row
		padding 1em

		.col
			a
				background azul
				border-radius 0.4em
				color white
				display run-in
				margin 0.5em
				padding 0.5em
				text-decoration none

			.download
				&:before
					font-family "photoyou_icons"
					font-weight bold
					content "\e602"	
			.share	
				&:before
					font-family "photoyou_icons"
					font-weight bold
					content "\e605"	
			
			#mobile
				float right
				vertical-align top

			 	
					